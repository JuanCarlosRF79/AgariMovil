<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_envio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtServicioID"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Código de servicio: "
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/primero"
            />
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtFechaSoli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Fecha de solicitud: "
                android:textColor="@color/primero"
                />
            <TextView
                android:id="@+id/txtFechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Fecha de finalización: "
                android:textColor="@color/primero"
                />
            <TextView
                android:id="@+id/txtEstadoServ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Costo del servicio: "
                android:textColor="@color/primero" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>