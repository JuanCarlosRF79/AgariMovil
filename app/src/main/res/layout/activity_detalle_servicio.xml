<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quinto"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".cliente.DetalleServicioActivity">

    <TextView
        android:id="@+id/txtCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C贸digo de servicio: "
        android:textAlignment="center"
        android:textColor="@color/primero"
        android:textSize="26dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/tercero"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/txtNombreCli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solicitante: "
        android:textColor="@color/primero"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direcci贸n"
        android:textAlignment="center"
        android:textColor="@color/primero"
        android:textSize="24dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/txtEstadoDir"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Estado: "
            android:textColor="@color/primero"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtCiudadDir"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ciudad: "
            android:textColor="@color/primero"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/txtColoniaDir"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Colonia: "
        android:textColor="@color/primero"
        android:textSize="18dp"
        android:inputType="textMultiLine"
        android:clickable="false"
        android:focusable="false"
        android:background="@color/quinto"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/txtCalleDir"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Calle: "
        android:textColor="@color/primero"
        android:textSize="18dp"
        android:inputType="textMultiLine"
        android:clickable="false"
        android:focusable="false"
        android:background="@color/quinto"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informaci贸n de servicio"
        android:textAlignment="center"
        android:textColor="@color/primero"
        android:textSize="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/tercero"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Estado del servicio: "
            android:textColor="@color/primero"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtEstadoServ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sin completar"
            android:textAlignment="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            android:background="@color/segundo"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Total: $"
        android:textColor="@color/primero"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtFechaSoli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Fecha de solicitud: "
        android:textColor="@color/primero"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtFechaSiguiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/segundo"
        android:paddingLeft="1dp"
        android:text="Siguiente cita: "
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtFechaFin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Fecha de finalizaci贸n: "
        android:textColor="@color/primero"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/layoutCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/primero"
            android:onClick="prueba"
            android:text="Cancelar"
            android:textColor="@color/white"
            android:textSize="27dp" />
    </LinearLayout>


</LinearLayout>