<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_envio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtCodigoServ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Código de servicio #"
                android:textColor="@color/primero" />

            <View
                android:layout_width="match_parent"
                android:layout_marginRight="70dp"
                android:layout_height="4dp"
                android:background="@color/segundo"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/txtNombreCli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:text="Solicitante: "
                android:textColor="@color/primero" />

            <TextView
                android:id="@+id/txtTelefonoCli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Num.Teléfono: "
                android:textColor="@color/primero" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginRight="70dp"
                android:background="@color/segundo"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/txtMunicipio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Municipio: "
                android:textColor="@color/primero" />

            <EditText
                android:id="@+id/edtCalle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:clickable="false"
                android:focusable="false"
                android:inputType="textMultiLine"
                android:nestedScrollingEnabled="true"
                android:text="Calle:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtColonia"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:clickable="false"
                android:focusable="false"
                android:inputType="textMultiLine"
                android:minWidth="48dp"
                android:nestedScrollingEnabled="true"
                android:text="Colonia:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtProblema"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:clickable="false"
                android:focusable="false"
                android:inputType="textMultiLine"
                android:minWidth="48dp"
                android:nestedScrollingEnabled="true"
                android:text="Descripción del problema:"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txtPagoServ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:text="$ "
                android:background="@color/segundo"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtEstadoServ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="En progreso"
                android:background="@color/segundo"
                android:padding="10dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtFechaFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:text="Fecha finalizado"
                android:textColor="@color/primero" />

            <TextView
                android:id="@+id/txtFechaCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="Próxima cita"
                android:textColor="@color/primero" />

            <TextView
                android:id="@+id/txtFechaOrden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="Fecha solicitud"
                android:textColor="@color/primero" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>