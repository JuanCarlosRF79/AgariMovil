<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quinto"
    tools:context=".RegistroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="700dp"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Regístrate"
                android:textColor="@color/primero"
                android:textSize="34sp" />

            <EditText
                android:id="@+id/edtNombre"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/quinto"
                android:elevation="20dp"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Nombre(s)"
                android:inputType="text|textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtApellido"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/quinto"
                android:elevation="20dp"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Apellidos"
                android:inputType="text|textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="5dp"

                android:textColor="#000000"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="54.5dp"
                android:layout_marginBottom="20dp"
                android:background="@color/quinto"
                android:elevation="20dp">

                <RadioButton
                    android:id="@+id/rbtnMasculino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="5dp"
                    android:text="Masculino" />

                <RadioButton
                    android:id="@+id/rdbtnFemenino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="5dp"
                    android:text="Femenino" />

                <RadioButton
                    android:id="@+id/rdbtnOtro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="5dp"
                    android:text="Prefiero no decirlo" />

            </RadioGroup>

            <EditText
                android:id="@+id/edtFechaNac"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:background="@color/quinto"
                android:elevation="20dp"
                android:ems="10"
                android:paddingLeft="5dp"
                android:hint="Fecha de nacimiento"
                android:inputType="date" />

            <EditText
                android:id="@+id/edtCorreoRegistro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/quinto"
                android:elevation="20dp"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Correo electrónico"
                android:inputType="text|textEmailAddress"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtContrasena"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/quinto"
                android:elevation="20dp"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Contraseña"
                android:inputType="text|textPassword"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtConfirmaContrasena"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/quinto"
                android:elevation="20dp"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Confirme su contraseña"
                android:inputType="text|textPassword"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtTelefono"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/quinto"
                android:elevation="20dp"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Teléfono"
                android:inputType="phone"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtRFC"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/quinto"
                android:elevation="20dp"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="RFC"
                android:inputType="text"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Dirección"
                android:textAlignment="center"
                android:textColor="@color/primero"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Puedes llenar está información más tarde"
                android:textAlignment="center"
                android:textColor="@color/primero"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spnEstados"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:background="@color/quinto"
                android:elevation="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.531"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.155" />

            <EditText
                android:id="@+id/edtMunicipio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/quinto"
                android:elevation="20dp"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Municipio"
                android:inputType="text"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtCalle"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/quinto"
                android:elevation="20dp"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Calle"
                android:inputType="text"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtColonia"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/quinto"
                android:elevation="20dp"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Colonia"
                android:inputType="text|textPostalAddress"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:backgroundTint="@color/segundo"
                android:fontFamily="@font/nunito_bold"
                android:text="Registrarse"
                android:textColor="@color/quinto"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.791"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.525" />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>