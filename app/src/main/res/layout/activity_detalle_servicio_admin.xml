<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quinto"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:context=".DetalleServicioAdminActivity">
    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C贸digo de servicio: "
        android:textAlignment="center"
        android:textColor="@color/primero"
        android:textSize="26dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/tercero"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/txtNombreCli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solicitante: "
        android:textColor="@color/primero"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direcci贸n"
        android:textAlignment="center"
        android:textColor="@color/primero"
        android:textSize="24dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/txtEstadoDir"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Estado: "
            android:textColor="@color/primero"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtCiudadDir"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ciudad: "
            android:textColor="@color/primero"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/txtColoniaDir"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Colonia: "
        android:textColor="@color/primero"
        android:textSize="18dp"
        android:inputType="textMultiLine"
        android:clickable="false"
        android:focusable="false"
        android:background="@color/quinto"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/txtCalleDir"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Calle: "
        android:textColor="@color/primero"
        android:textSize="18dp"
        android:inputType="textMultiLine"
        android:clickable="false"
        android:focusable="false"
        android:background="@color/quinto"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informaci贸n de servicio"
        android:textAlignment="center"
        android:textColor="@color/primero"
        android:textSize="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/tercero"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado del servicio: "
            android:textColor="@color/primero"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtEstadoServ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitado"
            android:textAlignment="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            android:background="@color/segundo"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado del servicio: "
            android:textColor="@color/primero"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="$300.00"
            android:background="@color/quinto"
            android:textColor="@color/primero"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtFechaSoli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de solicitud:"
        android:textColor="@color/primero"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="1dp"
            android:text="Siguiente cita:"
            android:textColor="@color/primero"
            android:textAlignment="textStart"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/edtFechaSiguiente"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/segundo"
            android:textColor="@color/white"
            android:textColorHint="@color/primero"
            android:paddingLeft="5dp"
            android:hint="Selecciona una fecha"
            android:inputType="date"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtFechaFin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de finalizaci贸n:"
        android:textColor="@color/primero"
        android:textSize="20sp"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:id="@+id/layoutCancelar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnAccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/primero"
            android:textSize="27dp"
            android:text="Confirmar" />
    </LinearLayout>


</LinearLayout>